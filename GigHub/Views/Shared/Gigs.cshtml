@using System.Web.UI.WebControls
@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = @Model.Heading;
}
<h2 style="margin-top: -15px; padding-bottom: 25px; ">@Model.Heading</h2>

@using (Html.BeginForm("Search", "Gigs"))
{
    <div class="form-group">
        <div  class="input-group" id="searchGigs">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", PlaceHolder = "Search By Artist or Genre or Location"})
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
        
    </div>
}

<ul class="gigs">

    @foreach (var gig in Model.UpcomingGigs)
    {
        <li>
            <div class="date">
                <div class="month">@gig.Date.ToString("MMM")</div>
                <div class="day">@gig.Date.ToString("d ")</div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name

                    @if (gig.IsCanceled)
                    {
                        <span class="label label-danger"> Canceled</span>
                    }

                    @if (Model.ShowActions)
                    {
                        <button data-user-id="@gig.ArtistId" class="btn btn-default btn-sm pull-right js-toggle-follow">Follow</button>
                    }

                </span>
                <span class="genre">@gig.Genre.Name</span>
                @if (Model.ShowActions && !gig.IsCanceled)
                {

                    <button data-gig-id="@gig.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going?</button>
                }
            </div>
        </li>
    }
</ul>
@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-toggle-attendance").click(function(e) {
                var button = $(e.target);
                $.post("/api/attendances", { "gigId": button.attr("data-gig-id") })
                    .done(function() {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function() {
                        alert("Something Failed! ");
                    });
            });
        });
    </script>
    
<script>
        $(document).ready(function() {
            $(".js-toggle-follow").click(function(e) {
                var button = $(e.target);
                $.post("/api/followings", { "followeeId": button.attr("data-user-id") })
                    .done(function() {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-danger")
                            .text("Following");
                    })
                    .fail(function() {
                        alert("Something Failed! ");
                    });
            });
        });
</script>
}

